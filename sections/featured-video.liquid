{%- liquid

  assign section_name = 'featured-video'
  assign section_classes = section_name
  assign section_id = section_name | append: '--' | append: section.id

  assign aos_delay = 250
  assign aos_delay_increment = 250
  assign aos_id = section_id

  assign section_cols = section.settings.cols | default: 'col-12'
  assign section_container = section.settings.container | default: 'container'
  assign section_video_aspect_ratio_height = section.settings.video_aspect_ratio_height | default: ''
  assign section_video_aspect_ratio_width = section.settings.video_aspect_ratio_width | default: ''
  assign section_video_placeholder_image = section.settings.video_placeholder_image | default: false

-%}

{%- style -%}

  {%
    render 'element-styles',
      background: section.settings.background,
      id: section_id,
      padding_bottom: section.settings.padding_bottom,
      padding_top: section.settings.padding_top,
  -%}

{%- endstyle -%}

<div class="{{ section_classes }}" id="{{ section_id }}">
  {% render 'bs-container', state: 'open', col: section_cols, container: section_container %}
    <div class="{{ section_name }}__main">


    </div>
  {% render 'bs-container', state: 'closed', col: section_cols, container: section_container %}
</div>

{% schema %}
{
  "name": "Featured Video",
  "tag": "section",
  "class": "section section--featured-video",
  "max_blocks": 1,
  "settings": [
    {
			"content": "Settings",
			"type": "header"
		},
    {
      "content": "Anchor",
      "type": "header"
    },
    {
      "label": "Anchor ID",
      "info": "Optionally include a unique ID so that sections within the page can be linked to. Anchor IDs must be all lowercase, unique and replaced empty spaces with hyphens. For example: my-great-section-anchor",
      "type": "text",
      "id": "anchor_id"
    },
    {
			"content": "Background",
			"type": "header"
		},
    {
		  "label": "Background",
		  "type": "select",
		  "options": [
        { "label": "Black", "value": "black" },
			  { "label": "White", "value": "white" }
		  ],
		  "default": "white",
		  "id": "background"
		},
    {
			"content": "Container",
			"type": "header"
		},
    {
      "label": "Container",
      "type": "select",
      "options": [
        { "label": "Static", "value": "container" },
        { "label": "Fluid", "value": "container-fluid" },
        { "label": "Full Width", "value": "full-width" }
      ],
      "default": "container",
      "id": "container"
    },
    {
			"content": "Padding",
			"type": "header"
		},
		{
			"label": "Top Padding",
			"type": "range",
			"min": 0,
			"max": 300,
			"step": 4,
			"default": 44,
      "id": "padding_top"
		},
		{
			"label": "Bottom Padding",
			"type": "range",
			"min": 0,
			"max": 300,
			"step": 4,
			"default": 44,
      "id": "padding_bottom"
		},
    {
			"content": "Video",
			"type": "header"
		},
    {
      "label": "Video Aspect Ratio (Width)",
      "type": "text",
      "id": "video_aspect_ratio_width"
    },
    {
      "label": "Video Aspect Ratio (Height)",
      "type": "text",
      "id": "video_aspect_ratio_height"
    }
  ],
  "blocks": [
    {
      "name": "Vimeo",
      "type": "vimeo",
      "settings": [
        {
          "label": "Vimeo ID",
          "type": "text",
          "id": "vimeo_id"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Feature Video",
      "category": "Video"
    }
  ],
  "enabled_on": {
    "templates": ["*"]
  }
}
{% endschema %}
