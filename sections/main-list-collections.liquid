{%- liquid

  assign section_name = 'list-collections'
  assign section_classes = section_name
  assign section_id = section_name | append: '--' | append: section.id

  assign section_anchor_id = section.settings.anchor_id | default: ''
  assign section_collection_sorting = section.settings.collection_sorting
  assign section_collection_title_size = section.settings.collection_title_size
  assign section_collection_description_size = section.settings.collection_description_size
  assign section_collections_per_page = section.settings.collections_per_page
  assign section_grid_gutter = section.settings.grid_gutter | default: 20
  assign section_grid_layout = section.settings.grid_layout | default: 'two-column'

  case section_collection_sorting
    when 'products_high' or 'products_low'
      assign collections = collections | sort: 'all_products_count'
    when 'date' or 'date_reversed'
      assign collections = collections | sort: 'published_at'
  endcase

  if section_collection_sorting == 'products_high' or section_collection_sorting == 'date_reversed' or section_collection_sorting == 'alphabetical_reversed'
    assign collections = collections | reverse
  endif

-%}

{%- style -%}
  #{{ section_id }} .grid {
    gap: {{ section_grid_gutter }}px;
  }
  {%
    render 'element-styles',
      background: section.settings.background,
      id: section_id,
      padding_bottom: section.settings.padding_bottom,
      padding_top: section.settings.padding_top,
      text_colour: section.settings.text_colour
  -%}
{%- endstyle -%}

<div class="{{ section_classes }}" id="{{ section_id }}">
  {% render 'bs-container', state: 'open', col: 'col-12 col-lg-10 offset-lg-1', container: section_container %}
    {% paginate collections by section_collections_per_page %}

      <div class="{{ section_name }}__layout grid grid--{{ section_grid_layout }}" role="list">
        {%- for item in collections -%}
          {%- capture card_classes -%}{{ section_name }}__item card-collection{%- endcapture -%}
          {%-
            render 'card-collection',
              card_aria_role: 'listitem',
              card_classes: card_classes,
              card_collection: item
              card_heading_size: section_collection_title_size,
              card_message_size: section_collection_description_size
          -%}
        {%- endfor -%}
      </div>

      {% render 'pagination', paginate: paginate %}

    {% endpaginate %}
  {% render 'bs-container', state: 'closed', col: 'col-12 col-lg-10 offset-lg-1', container: section_container %}
</div>

{% schema %}
{
  "name": "List Collections",
  "tag": "section",
  "class": "section section--list-collections",
  "templates": [ "list-collections" ],
  "settings": [
    {
      "content": "Collection",
      "type": "header"
    },
    {
      "label": "Collection Sorting",
      "type": "select",
      "options": [
        { "label": "Alphabetically, A-Z", "value": "alphabetical" },
        { "label": "Alphabetically, Z-A", "value": "alphabetical_reversed" },
        { "label": "Date, new to old", "value": "date_reversed" },
        { "label": "Date, old to new", "value": "date" },
        { "label": "Product count, high to low", "value": "products_high" },
        { "label": "Product count, low to high", "value": "products_low" }
      ],
      "default": "alphabetical",
      "id": "collection_sorting"
    },
    {
			"label": "Collections per Page",
			"type": "range",
			"min": 1,
			"max": 50,
			"step": 1,
			"default": 12,
      "id": "collections_per_page"
		},
    {
      "label": "Collection Title Size",
      "type": "select",
      "options": [
        { "label": "Large", "value": "lg" },
        { "label": "Medium", "value": "md" },
        { "label": "Small", "value": "sm" }
      ],
      "default": "sm",
      "id": "collection_title_size"
    },
    {
      "label": "Collection Description Size",
      "type": "select",
      "options": [
        { "label": "Large", "value": "lg" },
        { "label": "Medium", "value": "md" },
        { "label": "Small", "value": "sm" }
      ],
      "default": "sm",
      "id": "collection_description_size"
    },
    {
      "content": "Settings",
      "type": "header"
    },
    {
      "content": "Anchor",
      "type": "header"
    },
    {
      "label": "Anchor ID",
      "info": "Optionally include a unique ID so that sections within the page can be linked to. Anchor IDs must be all lowercase, unique and replaced empty spaces with hyphens. For example: my-great-section-anchor",
      "type": "text",
      "id": "anchor_id"
    },
    {
		  "label": "Background",
		  "type": "select",
		  "options": [
        { "label": "Black", "value": "black" },
			  { "label": "White", "value": "white" }
		  ],
		  "default": "white",
		  "id": "background"
		},
    {
			"content": "Container",
			"type": "header"
		},
    {
      "label": "Container",
      "type": "select",
      "options": [
        { "label": "Static", "value": "container" },
        { "label": "Fluid", "value": "container-fluid" },
        { "label": "Full Width", "value": "full-width" }
      ],
      "default": "container",
      "id": "container"
    },
    {
			"content": "Grid",
			"type": "header"
		},
    {
      "label": "Grid Layout",
      "type": "select",
      "options": [
        { "value": "two-column", "label": "Two Column" },
        { "value": "three-column", "label": "Three Column" }
      ],
      "default": "two-column",
      "id": "grid_layout"
    },
    {
      "label": "Grid Gutter",
			"type": "range",
			"min": 0,
			"max": 100,
			"step": 2,
			"default": 20,
      "id": "grid_gutter"
    },
    {
      "content": "Padding",
      "type": "header"
    },
    {
      "label": "Top Padding",
      "type": "range",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "default": 36,
      "id": "padding_top"
    },
    {
      "label": "Bottom Padding",
      "type": "range",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "default": 36,
      "id": "padding_bottom"
    },
    {
      "content": "Text",
      "type": "header"
    },
    {
      "label": "Text Colour",
      "type": "select",
      "options": [
        { "label": "Dark", "value": "dark" },
        { "label": "Light", "value": "light" }
      ],
      "default": "dark",
      "id": "text_colour"
    }
  ]
}
{% endschema %}
