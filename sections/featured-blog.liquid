{%- liquid

  assign section_name = 'featured-blog'
  assign section_classes = section_name | append: ' section-' | append: section.id | append: '-padding'
  assign section_id = section_name | append: '--' | append: section.id

  assign aos_id = section_id | append: '--aos'
  assign aos_delay = 250
  assign aos_delay_increment = 250

  assign background_colour = section.settings.background | default: 'white'
  assign blog = section.settings.blog | default: false
  assign blog_articles_count = section.settings.blog.articles_count | default: 0
  assign blog_articles_exceeded = false
  assign blog_limit = section.settings.limit | default: 3
  assign container = section.settings.container | default: 'container'
  assign grid_gutter = section.settings.grid_gutter | default: 20
  assign grid_layout = section.settings.grid_layout | default: 'two-column'

  if section.settings.anchor_id != blank
    assign section_id = section.settings.anchor_id
  endif

  if blog_limit > blog_articles_count
    assign blog_articles_exceeded = true
  endif

-%}

{%
  render 'section-styles',
  background: section.settings.background,
  id: section.id,
  padding_bottom: section.settings.padding_bottom
  padding_top: section.settings.padding_top,
%}

<link rel="stylesheet" href="{{ 'section-featured-blog.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'section-featured-blog.css' | asset_url | stylesheet_tag }}</noscript>

<div class="{{ section_classes }}" id="{{ section_id }}">
  {% render 'bs-container', state: 'open', col: 'col-12 col-lg-10 offset-lg-1', container: container %}
    <div class="{{ section_name }}__layout grid grid--{{ grid_layout }} grid--gap-{{ grid_gutter }}" id="{{ aos_id }}" role="list">

      {% if blog_articles_count > 0 %}
        {% for item in blog.articles limit: blog_limit %}
          <div class="{{ section_name }}__item grid__item" data-index="{{ forloop.index }}" role="listitem">
            {% render 'card-article', card_article: item %}
          </div>
        {% endfor %}
      {% endif %}

    </div>
  {% render 'bs-container', state: 'closed', container: container %}
</div>

{% schema %}
{
  "name": "Featured Blog",
  "tag": "section",
  "class": "section section--featured-blog",
  "settings": [
    {
			"content": "Content",
			"type": "header"
		},
    {
      "label": "Blog",
      "type": "blog",
      "id": "blog"
    },
    {
      "label": "Limit",
      "type": "range",
      "min": 2,
      "max": 9,
      "step": 1,
      "default": 3,
      "id": "limit"
    },
    {
			"content": "Layout",
			"type": "header"
		},
    {
		  "label": "Background",
		  "type": "select",
		  "options": [
        { "label": "Black", "value": "black" },
			  { "label": "White", "value": "white" }
		  ],
		  "default": "white",
		  "id": "background"
		},
    {
      "label": "Container",
      "type": "select",
      "options": [
        { "label": "Static", "value": "container" },
        { "label": "Fluid", "value": "container-fluid" },
        { "label": "Full Width", "value": "full-width" }
      ],
      "default": "container",
      "id": "container"
    },
    {
			"content": "Grid",
			"type": "header"
		},
    {
      "label": "Grid Layout",
      "type": "select",
      "options": [
        { "value": "two-column", "label": "Two Column" },
        { "value": "three-column", "label": "Three Column" }
      ],
      "default": "two-column",
      "id": "grid_layout"
    },
    {
      "label": "Grid Gutter",
			"type": "range",
			"min": 0,
			"max": 100,
			"step": 2,
			"default": 20,
      "id": "grid_gutter"
    },
    {
			"content": "Padding",
			"type": "header"
		},
		{
			"label": "Top Padding",
			"type": "range",
			"min": 0,
			"max": 120,
			"step": 4,
			"unit": "px",
			"default": 36,
      "id": "padding_top"
		},
		{
			"label": "Bottom Padding",
			"type": "range",
			"min": 0,
			"max": 120,
			"step": 4,
			"unit": "px",
			"default": 36,
      "id": "padding_bottom"
		},
    {
			"content": "Anchor",
			"type": "header"
		},
    {
      "label": "Anchor ID",
      "info": "Optionally include a unique ID so that sections within the page can be linked to. Anchor IDs must be all lowercase, unique and replaced empty spaces with hyphens. For example: my-great-section-anchor",
      "type": "text",
      "id": "anchor_id"
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Featured Blog"
    }
  ]
}
{% endschema %}
