{%- liquid

  assign section_name = 'policy-refund'
  assign section_classes = section_name | append: ' section-' | append: section.id | append: '-padding'
  assign section_id = section_name | append: '--' | append: section.id
  assign section_key = 'refund_policy'

  assign aos_id = section_id | append: '--aos'
  assign aos_delay = 250
  assign aos_delay_increment = 250

  assign columns = 'col-12'
  assign container = section.settings.container | default: 'container'
  assign policy_content = shop[section_key].body | default: ''
  assign policy_title = shop[section_key].title | default: ''
  assign width =  section.settings.width | default: 'container'

  case width
    when 'compact'
      assign columns = columns | append: ' col-lg-8 offset-lg-2'
    when 'standard'
      assign columns = columns | append: ' col-lg-10 offset-lg-1'
  endcase

  if section.settings.anchor_id != blank
    assign section_id = section.settings.anchor_id
  endif

-%}

{%
  render 'section-styles',
  background: section.settings.background,
  id: section.id,
  padding_bottom: section.settings.padding_bottom
  padding_top: section.settings.padding_top,
%}

<div class="{{ section_classes }}" id="{{ section_id }}">
  {% render 'bs-container', state: 'open', col: columns, container: container %}
    <div class="{{ section_name }}__main" id="{{ aos_id }}">

      <h1>{{ policy_title }}</h1>
      <div>{{ policy_content }}</div>

    </div>
  {% render 'bs-container', state: 'closed', col: columns, container: container %}
</div>

{% schema %}
  {
    "name": "Refund Policy",
    "tag": "section",
    "class": "section section--refund policy",
    "settings": [
      {
			  "content": "Content",
			  "type": "header"
		  },
      {
        "label": "Width",
        "type": "select",
        "options": [
          { "label": "Full", "value": "full" },
          { "label": "Standard", "value": "standard" },
          { "label": "Compact", "value": "compact" }
        ],
        "default": "full",
        "id": "width"
      },
      {
			  "content": "Layout",
			  "type": "header"
		  },
      {
		    "label": "Background",
		    "type": "select",
		    "options": [
          { "label": "Black", "value": "black" },
			    { "label": "White", "value": "white" }
		    ],
		    "default": "white",
		    "id": "background"
		  },
      {
        "label": "Container",
        "type": "select",
        "options": [
          { "label": "Static", "value": "container" },
          { "label": "Fluid", "value": "container-fluid" },
          { "label": "Full Width", "value": "full-width" }
        ],
        "default": "container",
        "id": "container"
      },
      {
			  "content": "Padding",
			  "type": "header"
		  },
		  {
			  "label": "Top Padding",
			  "type": "range",
			  "min": 0,
			  "max": 120,
			  "step": 4,
			  "unit": "px",
			  "default": 36,
        "id": "padding_top"
		  },
		  {
			  "label": "Bottom Padding",
			  "type": "range",
			  "min": 0,
			  "max": 120,
			  "step": 4,
			  "unit": "px",
			  "default": 36,
        "id": "padding_bottom"
		  },
      {
			  "content": "Anchor",
			  "type": "header"
		  },
      {
        "label": "Anchor ID",
        "info": "Optionally include a unique ID so that sections within the page can be linked to. Anchor IDs must be all lowercase, unique and replaced empty spaces with hyphens. For example: my-great-section-anchor",
        "type": "text",
        "id": "anchor_id"
      }
    ],
	  "blocks": []
  }
{% endschema %}
