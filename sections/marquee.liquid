        { "label": "Not Sorry Serif", "value": "not-sorry-serif" },
        { "label": "Sorry Sans", "value": "sorry-sans" }
		  ],
		  "default": "sorry-sans",
		  "id": "marquee_font_style"
		},
    {
		  "label": "Marquee Gap",
		  "type": "range",
			"min": 0,
			"max": 200,
			"step": 5,
			"default": 25,
		  "id": "marquee_gap"
		},
    {
			"label": "Marquee Top Padding",
			"type": "range",
			"min": 0,
			"max": 300,
			"step": 4,
			"default": 36,
      "id": "marquee_padding_top"
		},
    {
			"label": "Marquee Bottom Padding",
			"type": "range",
			"min": 0,
			"max": 300,
			"step": 4,
			"default": 36,
      "id": "marquee_padding_bottom"
		},
    {
			"content": "Padding",
			"type": "header"
		},
		{
			"label": "Top Padding",
			"type": "range",
			"min": 0,
			"max": 300,
			"step": 4,
			"default": 36,
      "id": "padding_top"
		},
		{
			"label": "Bottom Padding",
			"type": "range",
			"min": 0,
			"max": 300,
			"step": 4,
			"default": 36,
      "id": "padding_bottom"
		},
    {
      "content": "Text",
      "type": "header"
    },
    {
      "label": "Text Case",
      "type": "select",
      "options": [
        { "label": "Capitalize", "value": "capitalize" },
        { "label": "Lowercase", "value": "lowercase" },
        { "label": "No Change", "value": "none" },
        { "label": "Uppercase", "value": "uppercase" }
      ],
      "default": "none",
      "id": "text_case"
    },
    {
      "label": "Text Colour",
      "type": "select",
      "options": [
        { "label": "Dark", "value": "dark" },
        { "label": "Light", "value": "light" }
      ],
      "default": "dark",
      "id": "text_colour"
    }
  ],
  "blocks": [
    {
      "name": "Marquee",
      "type": "marquee",
      "limit": 9,
      "settings": [
        {
          "label": "Text",
          "type": "text",
          "id": "text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Marquee",
      "category": "Text"
    }
  ],
  "enabled_on": {
    "templates": ["*"]
  }
}
{% endschema %}
