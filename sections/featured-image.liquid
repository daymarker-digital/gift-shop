{%- liquid

  assign section_name = 'featured-image'
  assign section_classes = section_name
  assign section_id = section_name | append: '--' | append: section.id

  assign aos_delay = 250
  assign aos_delay_increment = 250
  assign aos_id = section_id

  assign section_container = section.settings.container | default: 'container'
  assign section_content_placement_horizontal = section.settings.content_placement_horizontal | default: ''
  assign section_content_placement_vertical = section.settings.content_placement_vertical | default: ''
  assign section_content_stack_mobile = section.settings.content_stack_mobile | default: false
  assign section_content_width_desktop = section.settings.content_width_desktop
  assign section_content_width_mobile = section.settings.content_width_mobile
  assign section_image = section.settings.image | default: false
  assign section_image_height_desktop = section.settings.image_height_desktop
  assign section_image_height_mobile = section.settings.image_height_mobile

-%}

{%- style -%}

  #{{ section_id }} .content > * {
    width: {{ section_content_width_mobile }}%;
  }

  @media screen and (min-width: 992px) {
    #{{ section_id }} .content > * {
      width: {{ section_content_width_desktop }}%;
    }
  }

  {%
    render 'element-styles',
      background: section.settings.background,
      background_image: section.settings.background_image,
      background_image_position_desktop: section.settings.background_image_position_desktop,
      background_image_position_mobile: section.settings.background_image_position_mobile,
      background_image_repeat: section.settings.background_image_repeat,
      background_image_size: section.settings.background_image_size,
      border_bottom: section.settings.border_bottom,
      border_top: section.settings.border_top,
      id: section_id,
      padding_bottom: section.settings.padding_bottom,
      padding_top: section.settings.padding_top,
      text_colour: section.settings.text_colour
  -%}

{%- endstyle -%}

<div class="{{ section_classes }}" id="{{ section_id }}">
  {% render 'bs-container', state: 'open', col: 'col-12 col-lg-10 offset-lg-1', container: section_container %}
    <div class="{{ section_name }}__layout">

      {% if section_image %}
        <div class="{{ section_name }}__media media media--height-mobile-{{ section_image_height_mobile }} media--height-desktop-{{ section_image_height_desktop }}">
          {% render 'lazyload-image', image: section_image %}
        </div>
      {% endif %}

      <div class="{{ section_name }}__content content {% if section_content_stack_mobile %}content--stack-mobile{% endif %} content--x-{{ section_content_placement_horizontal }} content--y-{{ section_content_placement_vertical }}">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'heading' -%}

              {% assign heading = block.settings.heading | default: '' %}
              {% assign heading_size = block.settings.size | default: '1' %}
              {% assign heading_style = block.settings.style | default: 'primary' %}

              {% if heading != blank %}
                <h{{ heading_size }} class="{{ section_name }}__heading heading--{{ heading_size }} heading--{{ heading_style }}">{{ heading | escape }}</h{{ heading_size }}>
              {% endif %}

            {%- when 'message' -%}

              {% assign message = block.settings.message | default: '' %}

              {% if message != blank %}
                <div class="{{ section_name }}__message body-copy--1">{{ message }}</div>
              {% endif %}

            {%- when 'button' -%}

              {%- liquid

                assign link = block.settings.link | default: ''
                assign style = block.settings.style | default: 'primary'
                assign colour = block.settings.colour | default: 'black'
                assign title = block.settings.title | default: ''
                assign target = '_self'

                if link contains 'http'
                  assign target = '_blank'
                endif

              -%}

              {% if link != blank and title != blank %}
                {%- capture button_classes -%}featured-image__button button button--{{ style }} button--{{ style }}-{{ colour }}{%- endcapture %}
                <div class="{{ section_name }}__cta">
                  {%
                    render 'link',
                      classes: button_classes,
                      link: link,
                      title: title
                  %}
                </div>
              {% endif %}

          {%- endcase -%}
        {%- endfor -%}
      </div>

    </div>
  {% render 'bs-container', state: 'closed', container: section_container %}
</div>

{% schema %}
{
  "name": "Featured Image",
  "tag": "section",
  "class": "section section--featured-image",
  "settings": [
    {
			"content": "Media",
			"type": "header"
		},
    {
      "label": "Image",
      "type": "image_picker",
      "id": "image"
    },
    {
      "label": "Image Height (Desktop)",
      "type": "select",
      "options": [
        { "label": "Adapt to image", "value": "adapt" },
        { "label": "950px", "value": "950px" },
        { "label": "850px", "value": "850px" },
        { "label": "750px", "value": "750px" },
        { "label": "650px", "value": "650px" },
        { "label": "550px", "value": "550px" },
        { "label": "450px", "value": "450px" }
      ],
      "default": "adapt",
      "id": "image_height_desktop"
    },
    {
      "label": "Image Height (Mobile)",
      "type": "select",
      "options": [
        { "label": "Adapt to image", "value": "adapt" },
        { "label": "650px", "value": "650px" },
        { "label": "550px", "value": "550px" },
        { "label": "450px", "value": "450px" },
        { "label": "350px", "value": "350px" }
      ],
      "default": "adapt",
      "id": "image_height_mobile"
    },
     {
			"content": "Content",
			"type": "header"
		},
    {
			"label": "Width (Desktop)",
			"type": "range",
			"min": 33,
			"max": 100,
			"step": 1,
			"default": 100,
      "id": "content_width_desktop"
		},
    {
			"label": "Width (Mobile)",
			"type": "range",
			"min": 33,
			"max": 100,
			"step": 1,
			"default": 100,
      "id": "content_width_mobile"
		},
    {
      "label": "Placement (Horizontal)",
      "type": "select",
      "options": [
        { "label": "Left", "value": "left" },
        { "label": "Center", "value": "center" },
        { "label": "Right", "value": "right" }
      ],
      "default": "center",
      "id": "content_placement_horizontal"
    },
    {
      "label": "Placement (Vertical)",
      "type": "select",
      "options": [
        { "label": "Top", "value": "top" },
        { "label": "Center", "value": "center" },
        { "label": "Bottom", "value": "bottom" }
      ],
      "default": "center",
      "id": "content_placement_vertical"
    },
    {
      "label": "Stack Content",
      "info": "On mobile, stack content below image",
      "type": "checkbox",
      "default": false,
      "id": "content_stack_mobile"
    },
    {
			"content": "Layout",
			"type": "header"
		},
    {
		  "label": "Background",
		  "type": "select",
		  "options": [
        { "label": "Black", "value": "black" },
			  { "label": "White", "value": "white" }
		  ],
		  "default": "white",
		  "id": "background"
		},
    {
      "label": "Container",
      "type": "select",
      "options": [
        { "label": "Static", "value": "container" },
        { "label": "Fluid", "value": "container-fluid" },
        { "label": "Full Width", "value": "full-width" }
      ],
      "default": "container",
      "id": "container"
    },
    {
			"content": "Padding",
			"type": "header"
		},
		{
			"label": "Top Padding",
			"type": "range",
			"min": 0,
			"max": 200,
			"step": 4,
			"default": 36,
      "id": "padding_top"
		},
		{
			"label": "Bottom Padding",
			"type": "range",
			"min": 0,
			"max": 200,
			"step": 4,
			"default": 36,
      "id": "padding_bottom"
		},
    {
			"content": "Anchor",
			"type": "header"
		},
    {
      "label": "Anchor ID",
      "info": "Optionally include a unique ID so that sections within the page can be linked to. Anchor IDs must be all lowercase, unique and replaced empty spaces with hyphens. For example: my-great-section-anchor",
      "type": "text",
      "id": "anchor_id"
    }
  ],
  "blocks": [
    {
      "name": "Heading",
      "type": "heading",
      "limit": 1,
      "settings": [
        {
          "label": "Heading",
          "type": "text",
          "id": "heading"
        },
        {
          "label": "Size",
          "type": "select",
          "options": [
            { "label": "H1", "value": "1" },
            { "label": "H2", "value": "2" },
            { "label": "H3", "value": "3" }
          ],
          "default": "1",
          "id": "size"
        },
        {
          "label": "Style",
          "type": "select",
          "options": [
            { "label": "Primary", "value": "primary" },
            { "label": "Secondary", "value": "secondary" }
          ],
          "default": "primary",
          "id": "style"
        }
      ]
    },
    {
      "name": "Message",
      "type": "message",
      "limit": 1,
      "settings": [
        {
          "label": "Message",
          "type": "richtext",
          "id": "message"
        }
      ]
    },
    {
      "name": "Button",
      "type": "button",
      "limit": 1,
      "settings": [
        {
          "label": "Title",
          "type": "text",
          "id": "title"
        },
        {
          "label": "Link",
          "type": "url",
          "id": "link"
        },
        {
          "label": "Colour",
          "type": "select",
          "options": [
            { "label": "Black", "value": "black" },
            { "label": "Blue", "value": "blue" },
            { "label": "Yellow", "value": "yellow" }
          ],
          "default": "black",
          "id": "colour"
        },
        {
          "label": "Style",
          "type": "select",
          "options": [
            { "label": "Primary", "value": "primary" },
            { "label": "Secondary", "value": "secondary" }
          ],
          "default": "primary",
          "id": "style"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Image"
    }
  ]
}
{% endschema %}
