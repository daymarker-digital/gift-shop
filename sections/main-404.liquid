        }
      ]
    },
    {
      "name": "Message",
      "type": "message",
      "limit": 1,
      "settings": [
        {
          "label": "Message",
          "type": "richtext",
          "id": "message"
        },
        {
          "label": "Size",
          "type": "select",
          "options": [
            { "label": "Large", "value": "lg" },
            { "label": "Medium", "value": "md" },
            { "label": "Small", "value": "sm" }
          ],
          "default": "md",
          "id": "size"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "404",
      "blocks": [
        { "type": "heading" },
        { "type": "button" }
      ]
    }
  ]
}
{% endschema %}
