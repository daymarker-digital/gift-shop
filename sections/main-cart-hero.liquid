{%- liquid

  assign section_name = 'cart-hero'
  assign section_classes = section_name
  assign section_id = section_name | append: '--' | append: section.id

  assign aos_delay = 250
  assign aos_delay_increment = 250
  assign aos_id = section_id

  assign section_container = section.settings.container
  assign section_heading = settings.cart_heading | default: 'Cart'
  assign section_heading_alignment = section.settings.heading_alignment
  assign section_heading_size = section.settings.heading_size

-%}

{%- style -%}
  {%-
    render 'element-styles',
      background: section.settings.background,
      id: section_id,
      padding_bottom: section.settings.padding_bottom,
      padding_top: section.settings.padding_top
  -%}
{%- endstyle -%}

<div class="{{ section_classes }}" id="{{ section_id }}">
  {% render 'bs-container', state: 'open', col: 'col-12', container: section_container %}

    <div class="{{ section_name }}__main">
      <h1 class="{{ section_name }}__heading text--align-{{ section_heading_alignment }} heading--primary heading--{{ section_heading_size }}{% unless 'container' == section_container %}-fluid{% endunless %}">
        {{ section_heading }}
      </h1>
    </div>

  {% render 'bs-container', state: 'closed', col: 'col-12', container: section_container %}
</div>

{% schema %}
{
  "name": "Cart | Hero",
  "tag": "section",
  "class": "section section--cart-hero",
  "enabled_on": {
    "templates": [ "cart" ]
  },
  "settings": [
    {
      "content": "Heading",
      "type": "header"
    },
    {
      "label": "Heading Alignment",
      "type": "select",
      "options": [
        { "label": "Left", "value": "left" },
        { "label": "Center", "value": "center" },
        { "label": "Right", "value": "right" }
      ],
      "default": "left",
      "id": "heading_alignment"
    },
    {
      "label": "Heading Size",
      "type": "select",
      "options": [
        { "label": "Large", "value": "lg" },
        { "label": "Medium", "value": "md" },
        { "label": "Small", "value": "sm" }
      ],
      "default": "sm",
      "id": "heading_size"
    },
     {
      "content": "Settings",
      "type": "header"
    },
    {
		  "label": "Background",
		  "type": "select",
		  "options": [
        { "label": "Black", "value": "black" },
			  { "label": "White", "value": "white" }
		  ],
		  "default": "white",
		  "id": "background"
		},
    {
			"content": "Container",
			"type": "header"
		},
    {
      "label": "Container",
      "type": "select",
      "options": [
        { "label": "Static", "value": "container" },
        { "label": "Fluid", "value": "container-fluid" },
        { "label": "Full Width", "value": "full-width" }
      ],
      "default": "container",
      "id": "container"
    },
    {
      "content": "Padding",
      "type": "header"
    },
    {
      "label": "Top Padding",
      "type": "range",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "default": 36,
      "id": "padding_top"
    },
    {
      "label": "Bottom Padding",
      "type": "range",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "default": 36,
      "id": "padding_bottom"
    },
    {
      "content": "Text",
      "type": "header"
    },
    {
      "label": "Text Colour",
      "type": "select",
      "options": [
        { "label": "Dark", "value": "dark" },
        { "label": "Light", "value": "light" }
      ],
      "default": "dark",
      "id": "text_colour"
    }
  ],
  "blocks": []
}
{% endschema %}
