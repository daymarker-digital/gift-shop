{%- liquid

  assign section_name = 'terms-of-service-policy'
  assign section_classes = section_name
  assign section_id = 'shopify-section-' | append: section.id
  assign section_key = 'terms_of_service'

  assign section_container = 'container'
  assign section_content = shop[section_key].body | default: ''
  assign section_text_colour = section.settings.text_colour | default: 'dark'
  assign section_title = shop[section_key].title | default: ''

-%}

{%- style -%}
  {%-
    render 'element-styles',
      background: section.settings.background,
      id: section_id,
      padding_bottom: section.settings.padding_bottom,
      padding_top: section.settings.padding_top,
      text_colour: section.settings.text_colour
  -%}
{%- endstyle -%}

<div class="{{ section_name }}__main text--{{ section_text_colour }}">
  {% render 'policy-content', policy_container: section_container, policy_content: section_content, policy_title: section_title %}
</div>

{% schema %}
{
  "name": "Terms of Service Policy",
  "tag": "section",
  "class": "section policy terms-of-service-policy",
  "settings": [
    {
      "content": "Content",
      "type": "header"
    },
    {
      "content": "To change or update the content for this policy, log in to the Shopify dashboard and select Settings. From the Settings panel, choose Policies from the list of sub-panel options.",
      "type": "paragraph"
    },
    {
      "content": "Settings",
      "type": "header"
    },
    {
      "content": "Anchor",
      "type": "header"
    },
    {
      "label": "Anchor ID",
      "info": "Optionally include a unique ID so that sections within the page can be linked to. Anchor IDs must be all lowercase, unique and replaced empty spaces with hyphens. For example: my-great-section-anchor",
      "type": "text",
      "id": "anchor_id"
    },
    {
		  "label": "Background",
		  "type": "select",
		  "options": [
        { "label": "Black", "value": "black" },
			  { "label": "White", "value": "white" },
        { "label": "Inherit", "value": "inherit" }
		  ],
		  "default": "inherit",
		  "id": "background"
		},
    {
      "content": "Padding",
      "type": "header"
    },
    {
      "label": "Top Padding",
      "type": "range",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "default": 64,
      "id": "padding_top"
    },
    {
      "label": "Bottom Padding",
      "type": "range",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "default": 104,
      "id": "padding_bottom"
    },
    {
      "content": "Text",
      "type": "header"
    },
    {
      "label": "Text Colour",
      "type": "select",
      "options": [
        { "label": "Dark", "value": "dark" },
        { "label": "Light", "value": "light" },
        { "label": "Inherit", "value": "inherit" }
      ],
      "default": "inherit",
      "id": "text_colour"
    }
  ]
}
{% endschema %}
