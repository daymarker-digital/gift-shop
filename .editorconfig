# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

# Shopify Coding Standards
# https://shopify.dev/themes/best-practices

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.php]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

[*.scss]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.txt,wp-config-sample.php]
end_of_line = crlf