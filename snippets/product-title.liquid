{%- if product and product != blank -%}

  {%- comment -%}

      Accepts:
      - classes: {String} Optionally include custom classes, be it multiple classes or a single class
      - element_tag: {String} Optionally use a different element tag
      - product: {Object} Product Liquid object

      Usage:
      {%- render 'product-title', classes: 'my-great-class another-class', element_tag: 'strong', product: product -%}

  {%- endcomment -%}

  {%- liquid

    assign template_name = 'main-product'
    assign snippet_name = 'product-title'

    assign classes = classes | default: 'main-product__title'
    assign element_tag = element_tag | default: 'h1'

  -%}

   <{{ element_tag }} class='{{ classes }} {{ snippet_name }}'>{{ product.title }}</{{ element_tag }}>

{%- endif -%}
